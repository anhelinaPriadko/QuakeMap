<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <link
      rel="stylesheet"
      href="https://unpkg.com/leaflet@1.9.4/dist/leaflet.css"
    />
    <link href="styles/styles.css" rel="stylesheet" />
  </head>
  <body>
    <form>
      <input
        class="inputDate"
        type="date"
        name="startDate"
        placeholder="Start date"
        value=""
      />
      <input
        class="inputDate"
        type="time"
        name="startTime"
        placeholder="Enter time"
        value=""
      />
      <input
        class="inputDate"
        type="date"
        name="endDate"
        placeholder="End date"
        value=""
      />
      <input
        class="inputDate"
        type="time"
        name="endTime"
        placeholder="Enter time"
        value=""
      />
      <input
        type="number"
        name="minMagnitude"
        placeholder="Minimal magnitude"
        value=""
      />
      <input type="submit" value="Search" />
      <div>
        <input id="radio-temp-input" type="radio" name="interval" value="24 hours" />
        <label for="radio-temp-input">Last 24 hours</label>
      </div>
      <div>
        <input id="radio-temp-input" type="radio" name="interval" value="7 days" />
        <label for="radio-temp-input">Last 7 days</label>
      </div>

      <div>
        <input id="radio-temp-input" type="radio" name="interval" value="30 days" />
        <label for="radio-temp-input">Last 30 days</label>
      </div>

      <div>
        <input id="radio-temp-input" type="radio" name="interval" value="1 year" />
        <label for="radio-temp-input">Last year</label>
      </div>

      <div>
        <h3>Filter:</h3>
        <div>
          <input
            id="filter-radio-input"
            type="radio"
            name="filter"
            value="day"
          />
          <label for="filter-radio-input">Day hours (06:00 - 18:00)</label>
        </div>
        <div>
          <input
            id="filter-radio-input"
            type="radio"
            name="filter"
            value="night"
          />
          <label for="filter-radio-input">Night hours (18:00 - 09:00)</label>
        </div>
      </div>
    </form>

    <% if (locals.data) { %>
    <p><%= data %></p>
    <% } %>
    <div id="map"></div>

    <script src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js"></script>
    <script src="/script.js" charset="UTF-8"></script>
  </body>
</html>
